- provide :title, 'Edit your profile'
.modal.fade.hide#delete-account-confirm
  .modal-header
    %button.close{'data-dismiss' => 'modal'} &times;
    %h3 For reals?
  .modal-body
    %p Are you sure you wanna delete your account? You can't go back on it. A deal's a deal.
  .modal-footer
    %a.btn{href: '#', 'data-dismiss' => 'modal'}
      Not really
    = link_to @user, method: :delete, class: 'btn btn-danger' do
      %i.icon-trash.icon-white
      Delete
.row
  .span4.offset4
    .page-header
      %h1 Settings
    = form_for @user, remote: true, html: {novalidate: 'novalidate'} do |f|
      %h2 Edit your profile
      .control-group#first_name
        = f.text_field :first_name, placeholder: 'First name'
        %br/
        .help-inline
      .control-group#last_name
        = f.text_field :last_name, placeholder: 'Last name'
        %br/
        .help-inline
      .control-group#email
        = f.email_field :email, placeholder: 'Email'
        %br/
        .help-inline
      .control-group#password
        = f.password_field :password, placeholder: 'Password'
        %br/
        .help-inline
      .control-group#password_confirmation
        = f.password_field :password_confirmation, placeholder: 'Type it again.'
        %br/
        .help-inline
      %p
        %a.btn.btn-danger#delete-account{href: '#'}
          %i.icon-trash.icon-white
        %span.pull-right
          = link_to 'Cancel', 'javascript:history.back();'
          or
          = f.submit 'Save', class: 'btn btn-primary'
    %h2 Manage your data
    %p= link_to 'Download it as a JSON file', action: 'show', format: :json
